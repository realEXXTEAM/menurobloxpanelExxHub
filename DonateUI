local function notify(title, text)
	pcall(function()
		game:GetService("StarterGui"):SetCore("SendNotification", {
			Title = title,
			Text = text,
			Duration = 3
		})
	end)
end

local function copy(txt)
	if setclipboard then
		setclipboard(txt)
		notify("‚úÖ Disalin", "Link donasi berhasil disalin!")
	else
		notify("‚ö†Ô∏è Clipboard", "Executor tidak support.")
	end
end

