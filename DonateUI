--// Tab Switch
donateTab.MouseButton1Click:Connect(function()
	donateTab.BackgroundColor3 = Color3.fromRGB(0,255,120)
	donateTab.TextColor3 = Color3.new(0,0,0)
	topTab.BackgroundColor3 = Color3.fromRGB(40,40,40)
	topTab.TextColor3 = Color3.new(1,1,1)
	donatePage.Visible = true
	topPage.Visible = false
end)

topTab.MouseButton1Click:Connect(function()
	topTab.BackgroundColor3 = Color3.fromRGB(0,255,120)
	topTab.TextColor3 = Color3.new(0,0,0)
	donateTab.BackgroundColor3 = Color3.fromRGB(40,40,40)
	donateTab.TextColor3 = Color3.new(1,1,1)
	donatePage.Visible = false
	topPage.Visible = true
end)
