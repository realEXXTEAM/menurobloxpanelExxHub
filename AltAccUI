-- CONTAINER & PAGES
local Container = Instance.new("Frame")
Container.Size = UDim2.new(1, 0, 1, -40)
Container.Position = UDim2.new(0, 0, 0, 40)
Container.BackgroundTransparency = 1
Container.Parent = MainFrame

local function createPage(name)
    local pg = Instance.new("CanvasGroup")
    pg.Name = name; pg.Size = UDim2.new(1, 0, 1, 0); pg.BackgroundTransparency = 1
    pg.Visible = false; pg.Parent = Container
    return pg
end

local PageList = createPage("List")
local PageDetail = createPage("Detail")
local PageEmail = createPage("Email")

-- GLOBALS FOR COPY
local SelectedUser = ""
local SelectedPass = ""

local function syncCanvas(scrollFrame, layout)
    layout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
        scrollFrame.CanvasSize = UDim2.new(0, 0, 0, layout.AbsoluteContentSize.Y + 10)
    end)
end

-- --- PAGE LIST ---
local ScrollList = Instance.new("ScrollingFrame")
ScrollList.Size = UDim2.new(1, -20, 1, -10); ScrollList.Position = UDim2.new(0, 10, 0, 0)
ScrollList.BackgroundTransparency = 1; ScrollList.ScrollBarThickness = 2
ScrollList.Parent = PageList

local UIGrid = Instance.new("UIGridLayout")
UIGrid.CellSize = UDim2.new(0, 90, 0, 110); UIGrid.HorizontalAlignment = Enum.HorizontalAlignment.Center
UIGrid.Parent = ScrollList
syncCanvas(ScrollList, UIGrid)

-- --- PAGE DETAIL ---
local function createInfoRow(labelText, y)
    local label = Instance.new("TextLabel")
    label.Size = UDim2.new(0, 160, 0, 15); label.Position = UDim2.new(0, 135, 0, y - 18)
    label.Text = labelText; label.TextColor3 = Color3.fromRGB(180, 180, 180)
    label.Font = Enum.Font.GothamBold; label.TextSize = 10; label.TextXAlignment = Enum.TextXAlignment.Left
    label.BackgroundTransparency = 1; label.Parent = PageDetail

    local r = Instance.new("Frame")
    r.Size = UDim2.new(0, 160, 0, 35); r.Position = UDim2.new(0, 135, 0, y)
    r.BackgroundColor3 = Color3.fromRGB(30, 30, 30); r.Parent = PageDetail
    Instance.new("UICorner", r)

    local t = Instance.new("TextLabel")
    t.Size = UDim2.new(1, -35, 1, 0); t.Position = UDim2.new(0, 10, 0, 0)
    t.TextColor3 = Color3.fromRGB(255, 255, 255); t.TextSize = 12; t.TextTruncate = Enum.TextTruncate.AtEnd
    t.BackgroundTransparency = 1; t.TextXAlignment = Enum.TextXAlignment.Left; t.Parent = r

    local b = Instance.new("ImageButton")
    b.Size = UDim2.new(0, 20, 0, 20); b.Position = UDim2.new(1, -25, 0.5, -10)
    b.Image = "rbxassetid://90434151822042"; b.BackgroundTransparency = 1; b.Parent = r
    
    return t, b
end

