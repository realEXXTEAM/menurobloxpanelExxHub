-- SETUP SCREEN GUI
local FreeAltAccountUI = Instance.new("ScreenGui")
FreeAltAccountUI.Name = "Alt AccountUI"
FreeAltAccountUI.IgnoreGuiInset = true
FreeAltAccountUI.ResetOnSpawn = false
FreeAltAccountUI.Enabled = false
FreeAltAccountUI.Parent = Player:WaitForChild("PlayerGui")

local function animateContent(content)
    content.GroupTransparency = 1
    content.Size = UDim2.new(0.9, 0, 0.9, 0)
    local goal = {GroupTransparency = 0, Size = UDim2.new(1, 0, 1, 0)}
    local ti = TweenInfo.new(0.3, Enum.EasingStyle.Quart, Enum.EasingDirection.Out)
    TweenService:Create(content, ti, goal):Play()
end

-- MAIN FRAME
local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0, 320, 0, 240)
MainFrame.Position = UDim2.new(0.5, -160, 0.5, -120)
MainFrame.BackgroundColor3 = Color3.fromRGB(15, 15, 15)
MainFrame.Parent = FreeAltAccountUI
Instance.new("UICorner", MainFrame).CornerRadius = UDim.new(0, 10)

