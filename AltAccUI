-- NAV LOGIC
EmailNav.MouseButton1Click:Connect(function()
    Title.Text = "EMAIL"; EmailNav.Visible = false; PageList.Visible = false; PageDetail.Visible = false; PageEmail.Visible = true; animateContent(PageEmail)
end)

BackEm.MouseButton1Click:Connect(function() 
    Title.Text = "ALT GENERATOR"; EmailNav.Visible = true; PageEmail.Visible = false; PageList.Visible = true; animateContent(PageList) 
end)

-- --- GENERATE ACCOUNT LIST ---
for _, data in pairs(AltAccounts) do
    local itm = Instance.new("TextButton")
    itm.BackgroundColor3 = Color3.fromRGB(30, 30, 30); itm.Text = ""; itm.Parent = ScrollList
    Instance.new("UICorner", itm)

    local img = Instance.new("ImageLabel")
    img.Size = UDim2.new(1, 0, 0.8, 0); img.BackgroundTransparency = 1
    img.Image = "https://www.roblox.com/headshot-thumbnail/image?width=150&height=150&format=png&username=" .. data.user
    img.Parent = itm

    local n = Instance.new("TextLabel")
    n.Size = UDim2.new(1, 0, 0.2, 0); n.Position = UDim2.new(0,0,0.8,0)
    n.Text = "@"..data.user; n.TextColor3 = Color3.fromRGB(255,255,255); n.BackgroundTransparency = 1
    n.TextScaled = true; n.Font = Enum.Font.GothamBold; n.Parent = itm

    itm.MouseButton1Click:Connect(function()
        SelectedUser = data.user; SelectedPass = data.pass
        PageList.Visible = false; PageDetail.Visible = true; animateContent(PageDetail)
        DetImg.Image = "https://www.roblox.com/avatar-thumbnail/image?width=420&height=420&format=png&username=" .. data.user
        uT.Text = data.user; pT.Text = data.pass
    end)
end

PageList.Visible = true
animateContent(PageList)
