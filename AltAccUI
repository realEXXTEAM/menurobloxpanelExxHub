end)

-- --- PAGE EMAIL  ---
local EmailScroll = Instance.new("ScrollingFrame")
EmailScroll.Size = UDim2.new(1, -20, 1, -60); EmailScroll.Position = UDim2.new(0, 10, 0, 5)
EmailScroll.BackgroundTransparency = 1; EmailScroll.ScrollBarThickness = 2
EmailScroll.Parent = PageEmail

