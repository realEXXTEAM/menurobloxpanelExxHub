local uT, uB = createInfoRow("USERNAME", 30)
local pT, pB = createInfoRow("PASSWORD", 85)

-- COPY LOGIC FIXED
uB.MouseButton1Click:Connect(function() if setclipboard then setclipboard(SelectedUser) end end)
pB.MouseButton1Click:Connect(function() if setclipboard then setclipboard(SelectedPass) end end)

