EmailLayout.Padding = UDim.new(0, 8); EmailLayout.Parent = EmailScroll
syncCanvas(EmailScroll, EmailLayout)

for _, msg in pairs(AdminMessages) do
    local m = Instance.new("Frame")
    m.Size = UDim2.new(1, 0, 0, 110); m.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
    m.Parent = EmailScroll
    Instance.new("UICorner", m)

    local t = Instance.new("TextLabel")
    t.Size = UDim2.new(1, -10, 0, 25); t.Position = UDim2.new(0, 10, 0, 5)
    t.Text = msg.judul; t.TextColor3 = Color3.fromRGB(255, 215, 0); t.TextSize = 16 
    t.Font = Enum.Font.GothamBold; t.TextXAlignment = Enum.TextXAlignment.Left; t.BackgroundTransparency = 1; t.Parent = m

    local c = Instance.new("TextLabel")
    c.Size = UDim2.new(0.6, 0, 0, 70); c.Position = UDim2.new(0, 10, 0, 30)
    c.Text = msg.isi; c.TextColor3 = Color3.fromRGB(255, 255, 255); c.TextSize = 12
    c.TextWrapped = true; c.TextXAlignment = Enum.TextXAlignment.Left; c.TextYAlignment = Enum.TextYAlignment.Top 
    c.BackgroundTransparency = 1; c.Parent = m

    if msg.imgId and msg.imgId ~= "" then
        local img = Instance.new("ImageLabel")
        img.Size = UDim2.new(0, 85, 0, 85); img.Position = UDim2.new(1, -95, 0, 10)
        img.Image = msg.imgId; img.BackgroundColor3 = Color3.fromRGB(20, 20, 20); img.Parent = m
        Instance.new("UICorner", img)
    end
end

